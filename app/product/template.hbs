<div class="product-page">
    <p class="product-page-title">
      {{model.title}} - ${{model.price}}<br><i>{{model.artist}}, {{model.year}}<br>{{model.country}}</i>
    </p>

  <img class="lg-image" src={{model.image}}>
  <p>
    {{model.description}}
  </p>
  <div class="buttons">
    <button {{action 'addToCart' product}}>Add to Cart</button>
    <button class="remove-button" {{action 'destroyProduct' product}}>Remove</button>
  </div>

</div>
